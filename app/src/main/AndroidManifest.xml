<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LivingTogether">

        <!-- Google Maps API Key from build.gradle placeholder -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".ChatDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RoomRecommendationsActivity"
            android:exported="false"
            android:label="@string/find_room_title" />
        <activity
            android:name=".UserProfileActivity"
            android:exported="false"
            android:label="@string/profile_title" />
        <activity
            android:name=".SeekerPreferencesActivity"
            android:exported="false"
            android:label="@string/room_pref_title" />
        <activity
            android:name=".RoomDashboardActivity"
            android:exported="false"
            android:label="@string/my_room_title" />
        <activity
            android:name=".RoommatePreferencesActivity"
            android:exported="false"
            android:label="@string/roommate_pref_title" />
        <activity
            android:name=".MapPickerActivity"
            android:exported="false"
            android:label="Select Location" />
        <activity
            android:name=".AddRoomActivity"
            android:exported="false" />
        <activity
            android:name=".VerifyIdentityActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileSetupActivity"
            android:exported="false" />
        <activity
            android:name=".SignupActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.LivingTogether.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.LivingTogether" />
    </application>

</manifest>